{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "module": "es2015",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
