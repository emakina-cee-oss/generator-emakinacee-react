{
    "extends": [
        "emakinacee-base",
        "emakinacee-react",
        "prettier",
        "prettier/react"
    ],
    "env": {
        "jest": true
    },
    "globals": {
        "URL": false,
        "fetch": false
    },
    "parser": "typescript-eslint-parser",
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        },
        "import/extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ]
    },
    "rules": {
        "import/extensions": ["warn", "always", {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never"
        }]
    }
}
